#!/usr/bin/env perl

use strict;
use warnings;

use Cwd 'abs_path';

BEGIN {
    my $path = abs_path $0;
    $path =~ s#/\w*$##;
    unshift @INC, map { "$path/$_" } qw( ../lib ../../lib );
};

# Start command line interface for application
require Mojolicious::Commands;
Mojolicious::Commands->start_app('Messages');
