% layout 'default', url => 'login';
% title 'login';

% if (stash 'logged_in') {
    <b>Already logged in.</b> <a href='/logout'>Logout</a>
% } else {

<form action="/login" method="POST" >
% if (stash 'error') {
	<b><%= stash 'error' %></b><br>
% }
Login:<br>
%= text_field 'login'
<br>Password:<br>
%= password_field 'password'
<br><br>
<input type="submit" value="Login">
</form>

% }
